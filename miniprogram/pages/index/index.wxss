/**index.wxss**/

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}

.row {
  box-sizing: border-box;
  width: 100%;
  padding: 0 20px;
  display: flex;
  justify-content: space-around;
  flex-direction: row;
}

.block {
  box-sizing: border-box;
  display: flex;
  flex-basis: 45%;
  justify-content: center;
  align-items: center;
  height: 100px;
  border: 1px solid #ccc;
  box-shadow: 0 0 4px rgb(218, 221, 221);
  border-radius: 10px;
}